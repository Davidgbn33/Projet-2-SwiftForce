{% extends '/profile/view.html.twig' %}

{% block dashboardcontent %}
    <h1 class="titleOrder">Commande n° {{ order.0.order_id }}</h1>
    <div class="tableOrderUnitaire">
        <div class="tableHEAD">
            <div class="contenu5"></div>
            <div class="contenu1">Désignation</div>
            <div class="contenu2">Quantité</div>
            <div class="contenu3">Prix</div>
            <div class="contenu4">Total</div>
        </div>
        <div class="tableContenu">
            {% for product in order %}
                <a href="/product/show?id={{ product.product_id }}">
                    <div class="detailContenuOrder">
                        <div class="contenu5 WS-survol"><i class="fa-solid fa-eye eye-order fa-lg" style="color: #004f43;"></i></div>
                        <div class="contenu1 WS-survol">{{ product.name_product }}</div>
                        <div class="contenu2 WS-survol">{{ product.product_quantity }}</div>
                        <div class="contenu3 WS-survol">{{ product.price_per }} €</div>
                        <div class="contenu4 WS-survol">{{ product.product_quantity * product.price_per }} €</div>
                    </div></a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
