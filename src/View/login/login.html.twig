{% extends 'layout.html.twig' %}

{% block title %}Add - Users{% endblock %}
{% block content %}
    <div class="col-6 text-center w-100">
        <h1 class="loginTitle WScolor">Connexion Ã  votre espace personnel</h1>
        <form method="post">
            <div class="mb-3">
                <label class="labelInput" for="email">Adresse email :</label><br>
                <input class="loginInput" type="email" name="email" id="email" value="{{ user.email }}">
                <p class="contactError">{{ error.email }}</p>
            </div>
            <div class="mb-3">
                <label class="labelInput" for="WS_password">Mot de passe :</label><br>
                <input class="loginInput" type="password" name="WS_password" id="WS_password"
                       value="{{ user.password }}">
                <p class="contactError">{{ error.password }}</p>
            </div>
            <p class="contactError">{{ error.connexion }}</p>
            <div class="d-flex justify-content-center">
                <div class="mb-3">
                    <button class="btn btn-sucess text-white m-2">Connexion</button>
                </div>
                <div class="mb-3">
                    <a onclick="openModal()" href="#" class="btn btn-sucess text-decoration-none text-white m-2">S'inscrire</a>
                </div>
            </div>
        </form>
    </div>
    <div id="modal" class="WS_box_Promo">
        <div class="WS_img_promo">
            <a href="/users/add" type="submit" id="cancelBtn" title="Inscription" class="WS_border"><img
                    class="WS_img_promo" src="/assets/images/img.png" alt=""></a>
        </div>
    </div>
    <script>
        function openModal() {
            document.getElementById('modal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('modal').style.display = 'none';
        }

        document.getElementById('cancelBtn').addEventListener('click', closeModal);

    </script>
{% endblock %}
